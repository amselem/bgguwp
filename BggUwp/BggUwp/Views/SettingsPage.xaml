<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BggUwp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:BggUwp.ViewModels" 
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity" 
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core" 
    xmlns:Behaviors="using:Template10.Behaviors"
    x:Class="BggUwp.Views.SettingsPage" 
    xmlns:controls="using:Template10.Controls"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:SettingsPageViewModel x:Name="ViewModel"/>
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <Button x:Name="Account" Content="{Binding AccountStatusText}" Click="Account_Click" Margin="10,100,0,0" />
            <ToggleSwitch x:Name="WiFiOnlySwitch" Header="Update data only on WiFi" IsOn="{Binding ShouldUpdateOnlyOnWiFi, Mode=TwoWay}" />
        </StackPanel>
    </Grid>
</Page>
