<Page x:Class="BggUwp.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:controls="using:Template10.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:BggUwp.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:BggUwp.ViewModels" mc:Ignorable="d">

    <Page.DataContext>
        <vm:MainPageViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" d:DataContext="{d:DesignInstance local:DesignDataService, IsDesignTimeCreatable=True}">
        <Pivot x:Name="Menu" SelectionChanged="Menu_SelectionChanged" >
            
            <PivotItem x:Name="HotItems" Header="Home">
                <Grid>
                    <ListView x:Name="HotItemsItems" VerticalAlignment="Top"
                              ItemsSource="{Binding HotItemsVM.HotItemsList}" 
                              ItemTemplate="{StaticResource HotItemsItemTemplate}"
                              ItemClick="HotItems_ItemClick"
                              IsItemClickEnabled="True"
                              Margin="0,20,0,0">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </PivotItem>

        </Pivot>
    </Grid>
</Page>

